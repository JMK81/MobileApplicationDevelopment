<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermDetailActivity"
    >


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/term_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:paddingTop="50dp"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <RelativeLayout
            android:id="@+id/dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_course_detail_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/text_view_margin"
                android:layout_marginEnd="@dimen/text_view_margin"
                android:layout_marginLeft="@dimen/text_view_margin"
                android:layout_marginRight="@dimen/text_view_margin"
                android:layout_marginStart="@dimen/text_view_margin"
                android:layout_marginTop="@dimen/text_view_margin"
                android:padding="@dimen/md_padding"
                android:text="Start"
                android:textColor="@color/header_text"
                android:textSize="@dimen/text_size_md" />

            <TextView
                android:id="@+id/activity_course_detail_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_view_margin"
                android:layout_marginEnd="@dimen/text_view_margin"
                android:layout_marginLeft="@dimen/text_view_margin"
                android:layout_marginRight="@dimen/text_view_margin"
                android:layout_marginStart="@dimen/text_view_margin"
                android:layout_marginTop="@dimen/text_view_margin"
                android:layout_toEndOf="@id/activity_course_detail_start"
                android:layout_toRightOf="@id/activity_course_detail_start"
                android:padding="@dimen/md_padding"
                android:text="end"
                android:textColor="@color/header_text"
                android:textSize="@dimen/text_size_md" />
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/term_detail_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_below="@id/dates"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            app:srcCompat="@drawable/ic_document_add" />/RelitiveLayout>

    </android.support.design.widget.AppBarLayout>

    <!--todo remove hard coded text-->

    <!--todo remove hard coded text-->


    <ListView
        android:id="@+id/activity_course_detail_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>


</RelativeLayout>
