<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AssessmentDetailActivity"
    tools:showIn="@layout/activity_assessment_detail">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/assessment_name"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="20dp"
            android:text="Assessment Type:" />

        <TextView
            android:id="@+id/assessment_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/assessment_name"
            android:layout_margin="20dp"
            android:layout_toEndOf="@id/assessment_name"
            android:layout_toRightOf="@id/assessment_name"
            android:text="TextView" />

        <TextView
            android:id="@+id/assessment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assessment_name"
            android:layout_margin="20dp"
            android:text="Date" />

        <TextView
            android:id="@+id/assessment_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/assessment_date"
            android:layout_below="@id/assessment_date"
            android:layout_margin="20dp"
            android:layout_toEndOf="@id/assessment_date"
            android:layout_toRightOf="@id/assessment_date"
            android:text="TextView" />

        <TextView
            android:id="@+id/assessment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assessment_date"
            android:layout_margin="20dp"
            android:text="Time:" />

        <TextView
            android:id="@+id/assessment_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/assessment_time"
            android:layout_below="@id/assessment_date"
            android:layout_margin="20dp"
            android:layout_toEndOf="@id/assessment_time"
            android:layout_toRightOf="@id/assessment_time"
            android:text="TextView" />


        <TextView
            android:id="@+id/notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assessment_item_time"
            android:layout_margin="20dp"
            android:text="Notes: " />


        <ListView
            android:id="@+id/assessment_detail_list"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_below="@id/assessment_item_time"
            android:layout_alignBaseline="@id/notes"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"></ListView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>