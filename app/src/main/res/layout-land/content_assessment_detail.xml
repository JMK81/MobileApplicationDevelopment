<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AssessmentDetailActivity"
    tools:showIn="@layout/activity_assessment_detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">



        <TextView
            android:id="@+id/assessment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="20dp"
            android:layout_marginTop="25dp"
            android:text="Assessment Type: " />

        <TextView
            android:id="@+id/assessment_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/assessment_type"
            android:layout_margin="20dp"
            android:layout_toEndOf="@id/assessment_type"
            android:layout_toRightOf="@id/assessment_type"
            android:text="TextView" />

        <TextView
            android:id="@+id/assessment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assessment_type"
            android:layout_margin="20dp"
            android:text="Date" />

        <TextView
            android:id="@+id/assessment_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/assessment_date"
            android:layout_below="@id/assessment_type"
            android:layout_margin="20dp"
            android:layout_toEndOf="@id/assessment_date"
            android:layout_toRightOf="@id/assessment_date"
            android:text="TextView" />

        <TextView
            android:id="@+id/assessment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assessment_date"
            android:layout_margin="20dp"
            android:text="Time:" />

        <TextView
            android:id="@+id/assessment_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/assessment_time"
            android:layout_below="@id/assessment_date"
            android:layout_margin="20dp"
            android:layout_toEndOf="@id/assessment_time"
            android:layout_toRightOf="@id/assessment_time"
            android:text="TextView" />


        <TextView
            android:id="@+id/assessment_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assessment_time"
            android:layout_margin="20dp"
            android:text="Note: " />

        <EditText
            android:id="@+id/assessment_item_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assessment_item_time"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="textMultiLine" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>